<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:paddingStart="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_iteminventaire_row"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            android:textColor="@color/colorWhite"
            android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:text="1"
            android:textSize="36sp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="6dp"
            android:paddingEnd="4dp"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tv_iteminventaire_ref"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorBlack"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:text="Intitulé Article" />

            <TextView
                android:id="@+id/tv_iteminventaire_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="Dim. 09 déc 2018 20:08 " />

            <TextView
                android:id="@+id/tv_iteminventaire_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="56 article(s)" />

        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
